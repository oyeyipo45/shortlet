{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@Common/(.*)$": "<rootDir>/src/common/$1",
    "^@Countries/(.*)$": "<rootDir>/src/countries/$1",
    "^@Config/(.*)$": "<rootDir>/src/config/$1",
    "^@/(.*)$": "<rootDir>/src/$1"
  }
}
