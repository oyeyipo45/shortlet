    "/v1/api/countries": {
      "get": {
        "operationId": "CountriesController_getCountries",
        "summary": "Retrieve a paginated list of all the countries in the world",
        "parameters": [
          {
            "name": "limit",
            "required": false,
            "in": "query",
            "description": "Number of data per page",
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "page",
            "required": false,
            "in": "query",
            "description": "current page",
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "region",
            "required": false,
            "in": "query",
            "description": "Region to filter by",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": ""
          }
        },
        "tags": [
          "Countries"
        ]
      }
    },
